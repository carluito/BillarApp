<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BillarApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Configurar la pantalla de Splash de inicio y para cuando se necesite-->
    <!-- Por ejemplo la pantalla Splash de inicio-->
    <style name = "Theme.App.ComienzoSplash" parent = "Theme.SplashScreen">
        <item name = "windowSplashScreenBackground">@color/IndianRed</item>
        <item name = "windowSplashScreenAnimatedIcon">@drawable/bola8splash240x240</item>
        <item name = "postSplashScreenTheme">@style/Theme.BillarApp</item>


    </style>
</resources>